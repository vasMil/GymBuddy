<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/main_color" >
        <TextView
            android:id="@+id/Upload_video"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aoboshi_one_regular"
            android:text="@string/up_video"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/choose_a_category"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/aoboshi_one_regular"
        android:text="@string/choose_a_category"
        android:textAlignment="center"
        android:textColor="@color/main_color"
        android:textSize="25sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/chest"
        android:layout_width="415dp"
        android:layout_height="187dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/chest_button"
            android:layout_width="415dp"
            android:layout_height="187dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/chest"
            tools:ignore="TextContrastCheck"
            android:contentDescription="@string/chest" />


        <TextView
            android:id="@+id/chest_txt"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:textColor="@color/white"
            android:fontFamily="@font/aoboshi_one_regular"
            android:text="@string/chest"
            android:textSize="30sp"
            android:focusable="true"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/arms"
        android:layout_width="415dp"
        android:layout_height="187dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/arms_btn"
            android:layout_width="415dp"
            android:layout_height="187dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/arms"
            tools:ignore="TextContrastCheck"
            android:contentDescription="@string/arms" />


        <TextView
            android:id="@+id/arms_txt"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:textColor="@color/white"
            android:fontFamily="@font/aoboshi_one_regular"
            android:text="@string/arms"
            android:textSize="30sp"
            android:focusable="true"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/back_layout"
        android:layout_width="415dp"
        android:layout_height="187dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="415dp"
            android:layout_height="187dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/back"
            tools:ignore="TextContrastCheck"
            android:contentDescription="@string/back" />


        <TextView
            android:id="@+id/back_txt"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:textColor="@color/white"
            android:fontFamily="@font/aoboshi_one_regular"
            android:text="@string/back"
            android:textSize="30sp"
            android:focusable="true"/>

    </androidx.cardview.widget.CardView>



</LinearLayout>