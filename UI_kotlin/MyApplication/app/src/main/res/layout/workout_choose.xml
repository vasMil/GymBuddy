<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/main_color" >
        <TextView
            android:id="@+id/workout"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aoboshi_one_regular"
            android:text="@string/workout"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/choose_a_workout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/aoboshi_one_regular"
        android:text="@string/choose"
        android:textAlignment="center"
        android:textColor="@color/main_color"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/pull_Layout"
        android:layout_width="415dp"
        android:layout_height="187dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >

    <ImageButton
        android:id="@+id/pull_btn"
        android:layout_width="415dp"
        android:layout_height="187dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pull_img"
        tools:ignore="TextContrastCheck"
        android:contentDescription="null"
         />


        <TextView
            android:id="@+id/pull_txt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:textColor="@color/white"
            android:fontFamily="@font/aoboshi_one_regular"
            android:text="@string/pull"
            android:textSize="30sp"
            android:focusable="true"/>


    </androidx.cardview.widget.CardView>



<androidx.cardview.widget.CardView
android:id="@+id/push_Layout"
android:layout_width="415dp"
android:layout_height="188dp"
android:orientation="vertical" >

<ImageButton
    android:id="@+id/push_btn"
    android:layout_width="415dp"
    android:layout_height="188dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/push_img"
    tools:ignore="TextContrastCheck"
    android:contentDescription="null" />


<TextView
    android:id="@+id/push_txt"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:textColor="@color/white"
    android:fontFamily="@font/aoboshi_one_regular"
    android:text="@string/push"
    android:textSize="30sp"
    android:focusable="true"/>


</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/legs_Layout"
        android:layout_width="415dp"
        android:layout_height="188dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/legs_btn"
            android:layout_width="415dp"
            android:layout_height="188dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/legs_img"
            tools:ignore="TextContrastCheck"
            android:contentDescription="null" />


        <TextView
            android:id="@+id/legs_txt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:textColor="@color/white"
            android:fontFamily="@font/aoboshi_one_regular"
            android:text="@string/legs"
            android:textSize="30sp"
            android:focusable="true"/>


    </androidx.cardview.widget.CardView>


</LinearLayout>